{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "fragments": [
    "src/home-view.html",
    "src/about-view.html",
    "src/tool-view.html",
    "src/error404-view.html"
  ],
  "sources": [
    "src/**/*",
    "images/tour/*",
    "images/**/*",
